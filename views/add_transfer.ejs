<!DOCTYPE html>
<html lang="en">
<%- include('header') -%>
<h2 class="focused-title">Új utalás hozzáadása</h2>

<div class="h5"></div>
<div class="middle">
    <form method="post">
        <input placeholder="Dátum" type="date" value="<%=transfer.date%>"><br>
        <input placeholder="Összeg" type="number" value="<%=transfer.amount%>"><br>
        <table class="notable">
            <tr>
                <td><h5>Utaló</h5></td>
                <td></td>
                <td><h5>Kedvezményezett</h5></td>
            </tr>
            <tr>
                <td class="left">

                    <%users.forEach(function(cur){%>
                        <input type="radio" id="a<%=cur.id%>" value="value" class="radio" <%if (transfer.userfrom === cur.id){ %> checked <%}%> name="payed">
                        <label for="a<%=cur.id%>">
                            <div class="usertag bg-<%=cur.color%>">    <%=cur.name%>     </div><br>
                        </label>
                    <%});%>
                </td>
                <td><img class="arrow-right" src="/images/arrow-right.svg" alt="arrow-right" /></td>
                <td class="right">
                    <%users.forEach(function(cur){%>
                        <label for="b<%=cur.id%>">
                            <div class="usertag bg-<%=cur.color%>">    <%=cur.name%>     </div>
                        </label>
                        <input type="radio" id="b<%=cur.id%>" value="value" class="radio" <%if (transfer.userto === cur.id){ %> checked <%}%> name="payedto"><br>
                    <%});%>
                </td>
            </tr>
        </table>

        <div class="h5"></div>
        <input class="sbtn_with_h4" type="submit" value="Mentés">
        <a class="sbtn" href="/summary"><h4>Mégse</h4></a>
    </form>
</div>

</body>
</html>